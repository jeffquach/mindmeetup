<% provide(:title, "Study partners") %>

  <div class="container">
    <div class="form-container">
    
    <div class="row">

    <div class="col-xs-12 col-md-5">

      <div class="row user-profile">
          <div class="profile-highlight pad-header"><h1>Study partners</h1></div>
            <div class="user-info accepted-study-partners">
              <%= render "accepted_study_partners" %>
            </div> 
        </div>

      

      <div class="row user-profile">
        <div class="profile-highlight pad-header"><h2>Blocked study partners</h2></div>
          <div class="blocked-study-partners user-info">
            <%= render "blocked_study_partners" %>
          </div>
      </div>


    </div>

    <div class="col-xs-12 col-md-7">

      <div class="row user-profile">

      <div class="profile-highlight pad-header"><h2>Pending study partners</h2></div>
        <div class="pending-study-partners user-info">
          
            <%= render "pending_study_partners" %> 

        </div>

      </div>

      <div class="row user-profile">
      
      <div class="profile-highlight pad-header"><h2>Study partner requests</h2></div>
        <div class="study-partner-requests user-info">
          <%= render "study_partner_requests" %>
        </div>

      </div>
    </div>
  </div>
</div>
</div>
