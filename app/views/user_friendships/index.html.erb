<% provide(:title, "Study partners") %>
<div class="row">
  <div class="small-12 large-12 large-centered columns">

    <% @user_friendships.each do |friendship| %>

    <div class="large-5 columns">
      <div class="text-center"><h1>Study partners</h1></div>
        <% if friendship.accepted? %>
          <%= render "friend_avatar", object: friendship.friend %>
          <h4><%= friendship.friend.full_name %></h4>
          - <em>Friendship started <%= friendship.updated_at %>.</em> <%= link_to "Update
           friendship", edit_user_friendship_path(friendship) %>
        <% end %>
    </div>

    <div class="large-7 columns">

      <div><h2>Pending study partners</h2></div>
        <% if friendship.pending? %>
          <%= render "friend_avatar", object: friendship.friend %>
          <span class="friend-name"><%= link_to friendship.friend.full_name, user_path(friendship.friend) %></span>
          - <em>Friendship is pending</em> <%= link_to "Delete request",
           edit_user_friendship_path(friendship) %>
        <% end %>
      
      <div><h2>Requested study partners</h2></div>
        <% if friendship.requested? %>
          <%= render "friend_avatar", object: friendship.friend %>
          <h4><%= friendship.friend.full_name %></h4>
          - <em>Friendship requested</em> <%= link_to "Accept Friendship",
           edit_user_friendship_path(friendship) %>
        <% end %>
    </div>


    <% end %>
  </div>
</div>


