<% provide(:title, "Study partners") %>
<div class="row">
  <div class="small-12 large-12 large-centered columns">

    <div class="large-5 columns">
      <div><h1>Study partners</h1></div>
      <% @user_friendships.each do |friendship| %>
        <% if friendship.accepted? %>
          <%= render "friend_avatar", object: friendship.friend %>
          <h4><%= friendship.friend.full_name %></h4>
          - <em>Friendship started <%= friendship.updated_at %>.</em> <%= link_to "Update
           friendship", edit_user_friendship_path(friendship) %>
        <% end %>
      <% end %>  
    </div>

    <div class="large-7 columns">

      <div><h2>Pending study partners</h2></div>
        <div class="pending-study-partners">
          
            <%= render "pending_study_partners" %> 

        </div>
      
      <div><h2>Study partner requests</h2></div>
        <div class="study-partner-requests">
          <%= render "study_partner_requests" %>
        </div>
    </div>
  </div>
</div>


