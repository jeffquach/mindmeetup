<div class="small-12 large-6 large-centered columns">
<div class="text-center"><h1>Forgotten password</h1></div>

	<%= form_tag password_resets_path, method: :post do %>

		<div class="field">
		    <%= label_tag :email %><br />
		    <%= text_field_tag :email %> 
		</div>

		<div class="text-center"><%= submit_tag "Reset my password", class: "button radius" %></div>

	<% end %>

</div>