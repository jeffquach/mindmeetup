<div class="profile-infowindow">
    <div class="profile-name">
      <% if user.image_url(:thumb) %>
        <%= image_tag user.image_url(:thumb), class: "avatar-image" %>
      <% else %>
        <%= image_tag "default.png", class: "avatar-image" %>
      <% end %>
    </div>
    <div class="profile-info">
      <span class="infowindow-text">
        <h6><%= link_to user.first_name, user, style: "font-weight:bold;font-size:23px;" %></h6>
        <%= user.bio %>
      </span>
    </div>
</div>

