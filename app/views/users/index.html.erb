<div id="map-canvas" style="height:100%;width:56%;position:relative"></div>

<div id="users-div" style="width:44%">
  <ul id="users-map">


    <% if params[:search] && params[:search][:city_search] && params[:search][:learning_search] %>

      <% @users.each do |user| %>

    <li>


        <%= gravatar_for user %>

        <%= link_to user.first_name, user %>

        <% if user.admin? && !current_user %>

          | <%= link_to "Delete", user, confirm: "Are you sure?", method: :delete %>

  
        <% end %>
      
      
    </li>

    <% end %>

  <% end %>


</ul>
</div>

<%= javascript_tag do %>
  window.latitude = <%= @users.first.latitude %>;
  window.longitude = <%= @users.first.longitude %>;

  window.coords = <%= raw @users.map{|user| {latitude: user.latitude, longitude: user.longitude, id: user.id}}.to_json %>;  
<% end %>

