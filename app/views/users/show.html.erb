    <div id="g-hangout"></div>
    </h1>
    <div>
    
    </div>
  

    <p><%= link_to "Create a meetup", new_meetup_path(second_user_id: @user.id) %></p>
    <section>
      <div>
        <div class="small-12 large-4 columns"></div>
    <table>
            <div>
            <tbody><tr>
            </tr>
            <tr>
              <td>Name</td>
              <td class="value"><%= @user.first_name %></td>
            </tr>
            <tr>
