 <% provide(:title, @user.first_name) %>

<div class="row">
  <div class="small-12 large-4 columns">
    <div class="users">
    <h1>

      
      <%= image_tag @user.image_url(:thumb) %>

      <%= @user.first_name %>
      <%= link_to "Add as Friend", new_user_friendship_path(friend_id: @user), class: "button radius" %>
      <script>
    window.___gcfg = {
      lang: 'en-US'
    };

    (function() {
      var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
