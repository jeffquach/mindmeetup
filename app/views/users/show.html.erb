
<% provide(:title, @user.first_name) %>

<div class="row">
  <div class="small-12 large-4 columns">
    <div class="users">
    <h1>
      <%= @user.first_name %>
      <%= image_tag @user.image_url(:thumb) %></h1>
    <div>
    
    </div>
    <p><%= @user.email %></p>
    <section>

    	<h3>Nearby users</h3>
    	<ul>
	    	<% @nearbys.each do |user| %>

	    		<li><%= link_to user.first_name, user %> (<%= user.distance.round(2) %> km)</li>

	    	<% end %>
    	</ul>

    </section>
    <p><%= link_to "Create a meetup", new_meetup_path(second_user_id: @user.id) %></p>
  </div>	
</div> 

<div class="large-6 columns">
  <div id="map_canvas"></div>
</div>

<%= javascript_tag do %>

  window.latitude = <%= @user.latitude %>;
  window.longitude = <%= @user.longitude %>;
  window.showMarker = true;
  
<% end %>