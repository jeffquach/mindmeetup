<% provide(:title, "All users") %>	

<div class="jumbotron">

				<div class="tingz">
   <div>
     <%= image_tag "math-notebook.jpg", alt: "calculator", class: "img-responsive" %>
   </div>
   <div>
     <%= image_tag "stuff.jpg", alt: "pens", class: "img-responsive" %>
   </div>
   <div class="squish">
   	<%= image_tag "people-study2.jpg", alt: "studying", class: "img-responsive" %>
   </div>
</div>

	<div class="container">

		<div class="col-md-4">
			<div class="home-sidebar">
			<div class="text-center"><h3 class="sidebar-title"><em>Learn with people nearby</em></h3></div>

				<%= form_tag users_path, class: "form-signin", role: "form", method: :get do %>
				  <p>

				    <%= text_field_tag :city_search, nil, class: "form-control", placeholder:"Type in a location" %>

				    <br>

				    <%= select_tag :subject_search, options_from_collection_for_select(Subject.all, :id, :name), class: "form-control", prompt: "Select subject" %>

				    <br>

				    <%= select_tag :topic_search, options_for_select(Topic.order('lower(name) ASC').pluck(:name).uniq), class: "form-control", prompt: "Select topic" %>

				    <br>

				    <div><%= submit_tag "Search users", class: "btn btn-lg btn-primary btn-block", id: "home-search" %></div>
				  </p>


				<% end %>

			</div>
		</div>
		<div class="col-md-8 col-xs-12" id="home-heading">
			<span id="headliner">Find a study partner.</span>
		</div>
	  </div>
</div>
