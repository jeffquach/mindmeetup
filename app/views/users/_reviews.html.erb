<% @user.reviews.each do |review| %>

  <p>Review: <%= review.content %> Written by: <%= review.user.first_name %> |
    <% if review.review_writer_id == current_user.id %>

      <%= link_to "Edit", edit_user_review_path(@user,review) %> | 
      <%= link_to "Delete", user_review_path(@user,review), data: {confirm: "Are you sure?"}, method: :delete, remote: true %>

    <% end %>
  </p>


<% end %>



