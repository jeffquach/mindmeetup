 <%= form_for(@user) do |f| %>

 <%= render "shared/error_messages", object: f.object %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <div class="text-center"><%= f.submit class: "button radius" %></div>

<% end %>