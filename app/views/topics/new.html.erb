<% provide(:title, "New") %>

<div class="row">
	<div class="small-12 large-6 large-centered columns">

		<div class="text-center"><h1>Subjects I am studying</h1></div>

		<div class="user-studying">
			<%= render "user_study" %>
		</div>

		<%= form_for @topic do |f| %>

			<%= render "shared/error_messages", object: f.object %>

			<div class="topic-form">
				<%= render "ajax_form", object: f %>
			</div>

			<div class="text-center"><%= f.submit class: "button radius" %></div>

		<% end %>

	</div>
</div>