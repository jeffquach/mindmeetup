<% if response == "yes" %>

	<span class="meetup-label meetup-attend">Attending</span>

<% elsif response == "no" %>
	
	<span class="meetup-label meetup-decline">Declined</span>

<% elsif response == "maybe" %>

	<span class="meetup-label meetup-maybe">Maybe</span>

<% else %>
	
	<span class="meetup-label meetup-status">Awaiting reply</span>

<% end %>